{
  "esbonio.sphinx.confDir": "${workspaceFolder}/source",
  "restructuredtext.linter.disabledLinters": ["rstcheck", "rst-lint"],
  "esbonio.server.enabled": false,
  "files.watcherExclude": {
    "**/.venv/**": true
  },
  "python.formatting.provider": "none",
  "hadolint.cliOptions": [
    "--ignore",
    "DL3008",
    "--ignore",
    "DL3013",
    "--ignore",
    "DL3006",
    "--no-color"
  ],
  "cSpell.enableFiletypes": ["bibtex", "plantuml", "shellscript", "toml"],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
